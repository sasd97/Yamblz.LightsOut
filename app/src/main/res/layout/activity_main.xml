<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sasd97.java_blog.xyz.yamblzlightsout.MainActivity"
    >

   <FrameLayout
       android:layout_width="0dp"
       android:layout_height="80dp"
       android:layout_marginTop="8dp"
       android:background="#fff78a"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toLeftOf="@+id/guideline1"
       app:layout_constraintHorizontal_bias="0.0"
       android:id="@+id/linearLayout"
       android:layout_marginRight="4dp"
       android:layout_marginLeft="8dp">
   </FrameLayout>

   <TextView
       style="@style/TextViewStyles"
       android:id="@+id/timeTextView"
       android:text="Time: 10:00"
       android:textSize="16dp"
       android:layout_width="0dp"
       android:layout_height="35dp"
       app:layout_constraintRight_toLeftOf="@+id/guideline2"
       android:layout_marginLeft="4dp"
       app:layout_constraintLeft_toLeftOf="@+id/guideline1"
       android:layout_marginRight="4dp"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintTop_toTopOf="@+id/linearLayout"
       android:layout_marginTop="0dp"/>

   <TextView
       style="@style/TextViewStyles"
       android:id="@+id/clicksTextView"
       android:text="Clicks: 99"
       android:textSize="16dp"
       android:layout_width="0dp"
       android:layout_height="35dp"
       android:layout_marginLeft="4dp"
       app:layout_constraintLeft_toLeftOf="@+id/guideline2"
       android:layout_marginRight="8dp"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="@+id/timeTextView"
       android:layout_marginTop="0dp"
       app:layout_constraintHorizontal_bias="0.0"/>

   <Button
       style="@style/ButtonsStyles"
       android:text="Settings"
       android:id="@+id/settingsButton"
       android:layout_marginLeft="4dp"
       app:layout_constraintLeft_toLeftOf="@+id/guideline1"
       app:layout_constraintRight_toLeftOf="@+id/guideline2"
       android:layout_marginRight="4dp"
       app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
       app:layout_constraintHorizontal_bias="0.0"
       android:layout_marginBottom="0dp"/>

   <Button
       style="@style/ButtonsStyles"
       android:text="Results"
       android:layout_marginRight="8dp"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginLeft="4dp"
       app:layout_constraintLeft_toLeftOf="@+id/guideline2"
       app:layout_constraintBottom_toBottomOf="@+id/settingsButton"
       app:layout_constraintHorizontal_bias="0.0"
       android:layout_marginBottom="0dp"
       android:id="@+id/resultButton"/>

   <Button
       android:text="Back"
       style="@style/ButtonsStyles"
       android:layout_marginLeft="4dp"
       app:layout_constraintLeft_toLeftOf="@+id/guideline1"
       app:layout_constraintRight_toLeftOf="@+id/guideline2"
       android:layout_marginRight="4dp"
       app:layout_constraintHorizontal_bias="0.0"
       android:layout_marginTop="8dp"
       app:layout_constraintTop_toBottomOf="@+id/settingsButton"
       android:id="@+id/button3"/>

   <Button
       android:id="@+id/tryAgainButton"
       style="@style/ButtonsStyles"
       android:layout_marginLeft="4dp"
       android:layout_marginRight="8dp"
       android:layout_marginTop="8dp"
       android:text="Again"
       app:layout_constraintLeft_toLeftOf="@+id/guideline2"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/resultButton"/>

   <Button
       android:id="@+id/startButton"
       style="@style/ButtonStartStyles"
       android:layout_marginLeft="8dp"
       android:layout_marginRight="4dp"
       android:layout_marginTop="8dp"
       android:text="Start"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toLeftOf="@+id/guideline1"
       app:layout_constraintTop_toBottomOf="@+id/linearLayout"
       />

   <FrameLayout
       android:id="@+id/containerFragment"
       android:layout_width="0dp"
       android:layout_height="400dp"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginBottom="16dp"
       android:layout_marginLeft="8dp"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginRight="8dp"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginStart="8dp"
       android:layout_marginEnd="8dp">
   </FrameLayout>

   <android.support.constraint.Guideline
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/guideline1"
       app:layout_constraintGuide_percent="0.4"
       android:orientation="vertical"
       tools:layout_editor_absoluteY="0dp"
       tools:layout_editor_absoluteX="192dp"/>

   <android.support.constraint.Guideline
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/guideline2"
       app:layout_constraintGuide_percent="0.70"
       android:orientation="vertical"
       tools:layout_editor_absoluteY="0dp"
       tools:layout_editor_absoluteX="288dp"/>

</android.support.constraint.ConstraintLayout>
