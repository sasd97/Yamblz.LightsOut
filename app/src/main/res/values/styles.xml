<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderClickableItem" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorHeaderClickable</item>
        <item name="android:background">@drawable/rounded_rectangle_header_upper</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorHeaderTitle</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeaderContent">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorHeaderContent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeaderBackfield">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_rectangle_header_upper</item>
    </style>
</resources>
